class Solution 
{
public:
	int balancedStringSplit(string s) 
	{
		int ml = 0;
		int mr = 0;
		int count = 0;
		for (int i = 0; s[i] != '\0'; i++)
		{
			if (s[i] == 'L')
			{
				ml++;
			}
			if (s[i] == 'R')
			{
				mr++;
			}
			if (ml == mr)
			{
				count++;
				ml = 0;
				mr = 0;
			}
		}
		if (count == 0)
		{
			count++;
		}
		return count;
	}
};
